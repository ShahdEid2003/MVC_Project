@model List<Category>
@section heading {
    Categories
}
@section title{
    Show
}
<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Title</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item  in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a onClick="return confirm('Are you sure you want to delete');" type="button"class="btn btn-outline-danger" href="/admin/categories/delete/@item.Id">Delete</a></td>
                </tr>
            }
            
            
               
        </tbody>
    </table>
</div>